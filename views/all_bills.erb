<div>
  <h2>All Bills</h2>
  <form style="display:inline;" method"get" action="/vendors">
    <button type="submit">Edit Vendors</button>
  </form>
  <table>
    <tr>
      <th>Bill Memo</th>
      <th>Payment Date</th>
      <th>Bill Amount</th>
      <th>Vendor Name</th>
      <th></th>
    </tr>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= bill[:memo] %></td>
        <td><%= bill[:date] %></td>
        <td><%= bill[:amount] %></td>
        <td><%= bill[:vendor] %></td>
        <td>
          <form style="display:inline;" method="get" action="/bills/<%= bill[:id] %>">
            <button name="edit" type="submit">Edit Bill</button>
          </form>
          <form style="display:inline;" method="post" action="/bills/<%= bill[:id] %>/delete">
            <button name="delete" type="submit">Delete Bill</button>
          </form>
        </td>
      </tr>
    <% end %>
  </table>
</div>
